<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="post_form">
        <%= render "shared/post_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".post_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<% provide :title, t(".title") %>
<div class="center jumbotron">
  <h1><%= t ".welcome" %></h1>
  <h2>
    <%= t ".h2" %>
    <%= link_to t(".rails"), "http://www.railstutorial.org/" %>
    <%= t ".sample" %>
  </h2>

  <%= link_to t(".sigup"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
